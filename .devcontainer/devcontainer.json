// For format details, see https://aka.ms/devcontainer.json. For config options, see the
// README at: https://github.com/devcontainers/templates/tree/main/src/debian
{
	"name": "Debian",
	// Or use a Dockerfile or Docker Compose file. More info: https://containers.dev/guide/dockerfile
	"dockerComposeFile": "docker-compose.yml",
	"service": "devcontainer",
	"workspaceFolder": "/workspaces/${localWorkspaceFolderBasename}",

	// Features to add to the dev container. More info: https://containers.dev/features.
	// "features": {},

	// Use 'forwardPorts' to make a list of ports inside the container available locally.
	"forwardPorts": ["8000:8000"],

	"postCreateCommand": "bash -i -c 'sudo apt update && sudo apt upgrade -y && sudo apt install -y php-cli php-curl php-fpm php-gd php-gmp php-mbstring php-mysql php-snmp php-xml php-zip'",
	"postStartCommand": "bash -i -c 'cd /opt/librenms && source /opt/python/bin/activate && ./scripts/composer_wrapper.php install --no-dev && sed -i 's/#DB_HOST=/DB_HOST=db' .env && sed -i 's/#DB_DATABASE=/DB_DATABASE=librenms/g' .env && sed -i 's/#DB_USERNAME=/DB_USERNAME=librenms/g' .env && sed -i 's/#DB_PASSWORD=/DB_PASSWORD=mysecretpassword/g' .env'"

	// Configure tool-specific properties.
	// "customizations": {},

	// Uncomment to connect as root instead. More info: https://aka.ms/dev-containers-non-root.
	// "remoteUser": "root"
}
